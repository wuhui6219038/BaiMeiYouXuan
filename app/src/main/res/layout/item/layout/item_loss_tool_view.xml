<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/padding_8dp"
    android:paddingRight="@dimen/padding_12dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_8dp">

        <TextView
            android:id="@+id/tv_loss_tool_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_loss_tool_1_title"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_h_size" />

        <TextView
            android:id="@+id/tv_loss_tool_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5dp"
            android:text="@string/text_loss_tool_1_detail"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_s_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8dp"
            android:layout_marginBottom="@dimen/margin_4dp"
            android:background="@drawable/bg_corner_gray_transparent"
            android:paddingLeft="@dimen/padding_12dp"
            android:paddingTop="@dimen/padding_2dp"
            android:paddingBottom="@dimen/padding_2dp"
            android:paddingRight="@dimen/padding_12dp"
            android:src="@drawable/ic_next_gray" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5">

        <ImageView
            android:id="@+id/iv_loss_tool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_margin="@dimen/margin_12dp"
            android:src="@drawable/ic_loss_tool_6" />
    </FrameLayout>
</LinearLayout>