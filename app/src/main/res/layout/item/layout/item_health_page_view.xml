<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_corners_white_gray_5dp"
    android:orientation="horizontal"
    android:padding="@dimen/padding_12dp">

    <LinearLayout
        android:id="@+id/ll_item_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/ripple_touch"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_8dp"
            android:padding="@dimen/padding_8dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="体重记录"
                android:textSize="@dimen/font_h_size" />

            <TextView
                android:id="@+id/tv_sub_title_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_4dp"
                android:text="关注每一天的变化"
                android:textColor="@color/colorMainFont"
                android:textSize="@dimen/font_s_size" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/margin_8dp"
        android:background="@color/colorBackgroundGray" />

    <LinearLayout
        android:id="@+id/ll_item_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/ripple_touch"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_8dp"
            android:padding="@dimen/padding_8dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="体重记录"
                android:textSize="@dimen/font_h_size" />

            <TextView
                android:id="@+id/tv_sub_title_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_4dp"
                android:text="关注每一天的变化"
                android:textColor="@color/colorMainFont"
                android:textSize="@dimen/font_s_size" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>