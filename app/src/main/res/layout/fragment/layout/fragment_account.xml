<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainGray"
    android:orientation="vertical">

    <include layout="@layout/view_app_title" />

    <LinearLayout
        android:id="@+id/ll_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/padding_32dp">

        <ImageView
            android:id="@+id/iv_personal"
            android:layout_width="@dimen/size_64dp"
            android:layout_height="@dimen/size_64dp"
            android:src="@drawable/empty_avatar_user" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_16dp"
            android:layout_weight="1"
            android:text="@string/text_login_regist"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_h_size" />

        <TextView
            android:id="@+id/text_icon_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:padding="@dimen/margin_2dp"
            android:text="@string/icon_weight_next"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_x_size" />
    </LinearLayout>

    <LinearLayout
        android:clickable="true"
        android:id="@+id/ll_user_finance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_member_level"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/text_default_member_level"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tv_glod"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/text_default_num"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tv_has_cost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/text_default_num"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tv_available_gold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/text_default_num"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_user_finance2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding_8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/text_member_level"
            android:textColor="@color/colorTransparentFont" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/text_gold"
            android:textColor="@color/colorTransparentFont" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/text_has_cost"
            android:textColor="@color/colorTransparentFont" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/text_available_gold"
            android:textColor="@color/colorTransparentFont" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_8dp"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <TextView

            android:id="@+id/tv_order"
            style="@style/AccountClickTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/vector_drawable_order"
            android:text="@string/text_order" />

        <TextView
            android:id="@+id/tv_shop"
            style="@style/AccountClickTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/vector_drawable_shop_car"
            android:text="@string/text_shop_car" />

        <TextView
            android:id="@+id/tv_address"
            style="@style/AccountClickTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/vector_drawable_address"
            android:text="@string/text_address" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_card"
            style="@style/AccountClickTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:drawableTop="@drawable/vector_drawable_card"
            android:text="@string/text_card" />

        <TextView
            android:id="@+id/tv_erweima"
            style="@style/AccountClickTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/vector_drawable_erweima"
            android:text="@string/text_erweima" />

        <TextView
            android:id="@+id/tv_friends"
            style="@style/AccountClickTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/vector_drawable_friends"
            android:text="@string/text_friends" />
    </LinearLayout>
</LinearLayout>