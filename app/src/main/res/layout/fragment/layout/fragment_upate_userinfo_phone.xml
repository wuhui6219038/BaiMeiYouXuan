<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainGray"
    android:orientation="vertical">

    <include layout="@layout/view_app_title" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_8dp">

            <TextView
                style="@style/UserInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/padding_16dp"
                android:inputType="phone"
                android:text="@string/text_old_phone" />

            <EditText
                android:id="@+id/et_old_phone"
                style="@style/UserInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/hint_input_old_phone"
                android:inputType="phone" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1dp"
            android:layout_marginLeft="@dimen/margin_8dp"
            android:background="@color/colorMainGray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"

            android:orientation="horizontal"
            android:padding="@dimen/padding_8dp">

            <TextView
                style="@style/UserInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/padding_16dp"
                android:text="@string/text_new_phone" />

            <EditText
                android:id="@+id/et_new_phone"
                style="@style/UserInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/hint_input_new_phone"
                android:inputType="phone"
                android:maxLength="16" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_8dp"
        android:background="@drawable/bg_login_btn"
        android:gravity="center"
        android:padding="@dimen/padding_8dp"
        android:text="@string/btn_update"
        android:textSize="@dimen/font_h_size" />
</LinearLayout>