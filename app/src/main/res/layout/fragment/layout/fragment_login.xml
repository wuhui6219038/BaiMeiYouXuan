<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <include layout="@layout/view_app_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorTransparent"
        android:orientation="vertical"
        android:padding="@dimen/padding_8dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/padding_16dp"
            android:background="@mipmap/ic_launcher" />

        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:hint="@string/text_phone"
            android:inputType="phone"
            android:padding="@dimen/padding_16dp"
            android:text="15281870818"
            android:textSize="@dimen/font_m_size" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_2dp"
            android:background="@android:color/white"
            android:hint="@string/text_password"
            android:inputType="textPassword"
            android:padding="@dimen/padding_16dp"
            android:text="88888888"
            android:textSize="@dimen/font_m_size" />

        <Button
            android:id="@+id/btn_phone_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8dp"
            android:background="@drawable/touch_bg_gray"
            android:text="@string/text_login"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_h_size" />

        <Button
            android:id="@+id/btn_wx_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_4dp"
            android:background="@color/colorPrimary"
            android:text="@string/text_wx_login"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_h_size" />
    </LinearLayout>
</LinearLayout>