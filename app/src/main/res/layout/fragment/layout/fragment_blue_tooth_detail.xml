<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <include layout="@layout/view_app_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBarWeightRecord"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingLeft="@dimen/padding_32dp"
            android:paddingTop="@dimen/padding_64dp"
            android:paddingBottom="@dimen/padding_64dp"
            android:text="22"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_xxxx_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_8dp"
            android:text="@string/text_unit_weight_en"

            android:textColor="@color/colorTransparent"
            android:textSize="@dimen/font_h_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_1dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin_16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_fat"
            android:padding="@dimen/padding_8dp"
            android:src="@drawable/vector_drawable_fat" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_8dp"
            android:text="@string/text_fat"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/font_s_size" />

        <TextView
            android:id="@+id/tv_fat_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1" />

        <TextView
            android:id="@+id/tv_fat_level"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="标准"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_m_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1dp"
        android:background="@color/colorTransparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_1dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin_16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_water"
            android:padding="@dimen/padding_8dp"
            android:src="@drawable/vector_drawable_water" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_8dp"
            android:text="@string/text_water"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/font_s_size" />

        <TextView
            android:id="@+id/tv_water_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1" />

        <TextView
            android:id="@+id/tv_water_level"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="标准"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_m_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1dp"
        android:background="@color/colorTransparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_1dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin_16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_muscle"
            android:padding="@dimen/padding_8dp"
            android:src="@drawable/vector_drawable_muscle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_8dp"
            android:text="@string/text_muscle"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/font_s_size" />

        <TextView
            android:id="@+id/tv_muscle_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1" />

        <TextView
            android:id="@+id/tv_muscle_level"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="标准"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_m_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1dp"
        android:background="@color/colorTransparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_1dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin_16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_calories"
            android:padding="@dimen/padding_8dp"
            android:src="@drawable/vector_drawable_calories" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_8dp"
            android:text="@string/text_calories"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/font_s_size" />

        <TextView
            android:id="@+id/tv_calories_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100000" />

        <TextView
            android:id="@+id/tv_calories_level"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="标准"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_m_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1dp"
        android:background="@color/colorTransparent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_32dp"
        android:background="@drawable/btn_ripple_weight_record"
        android:paddingLeft="@dimen/padding_64dp"
        android:paddingRight="@dimen/padding_64dp"
        android:text="@string/title_weight_record"
        android:textColor="@android:color/white" />
</LinearLayout>