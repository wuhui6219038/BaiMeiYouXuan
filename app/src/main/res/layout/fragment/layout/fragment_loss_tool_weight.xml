<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_app_title" />

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_8dp"
            android:text="@string/text_personal_data_setting"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_x_size" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_16dp"
            android:text="@string/text_personal_data_setting_detail"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_m_size" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/text_weight"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_m_size" />


        <TextView
            android:id="@+id/tv_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_16dp"
            android:text="@string/text_height"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_h_size" />

        <com.baimeiyx.www.widget.Ruler
            android:id="@+id/rv_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_8dp"
            app:chooseCololr="#fff"
            app:currentValue="50"
            app:fromValue="30"
            app:interval="@dimen/size_8dp"
            app:intervalsBetweenValues="10"
            app:linesColor="#fff"
            app:linesWidth="@dimen/size_1dp"
            app:toValue="220"
            app:valuesInterval="1"
            app:valuesTextColor="@android:color/white"
            app:valuesTextSize="12sp" />


    </LinearLayout>

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:padding="@dimen/padding_24dp"
        android:text="@string/btn_submit"
        android:textSize="@dimen/font_x_size"
        android:textStyle="bold" />
</LinearLayout>