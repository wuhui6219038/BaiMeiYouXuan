<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<include layout="@layout/view_app_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackgroundGray"
        android:orientation="horizontal"
        android:padding="@dimen/padding_16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/text_health_foods_element_detail_element"
            android:textColor="@color/colorMainFont"
            android:textSize="@dimen/font_h_size" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/text_health_foods_element_detail_component"
            android:textColor="@color/colorMainFont"
            android:textSize="@dimen/font_h_size" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="@string/text_health_foods_element_detail_remark"
            android:textColor="@color/colorMainFont"
            android:textSize="@dimen/font_h_size" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rc_element"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>