<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundGray"
    android:orientation="vertical">

    <include layout="@layout/view_app_title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_8dp"
        android:text="@string/text_intelligent_scale" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_bluetooth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_no_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_16dp"
        android:text="@string/text_no_more_weight_sacle" />

    <TextView
        android:id="@+id/tv_search_bluetooth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:padding="@dimen/padding_16dp"
        android:text="@string/text_search_scale"
        android:textColor="@color/colorBarWeightRecord" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_8dp"
        android:text="@string/text_other" />

    <TextView
        android:id="@+id/tv_input_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/touch_bg"
        android:clickable="true"
        android:drawableRight="@drawable/ic_next"
        android:padding="@dimen/padding_16dp"
        android:text="@string/text_input_weight" />

</LinearLayout>