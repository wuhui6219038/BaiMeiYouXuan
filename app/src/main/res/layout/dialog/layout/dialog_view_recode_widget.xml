<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_corners_white_gray_10dp"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/padding_16dp">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:src="@android:drawable/ic_menu_close_clear_cancel" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/balance_buy_hint" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_12dp"
        android:text="@string/text_recode_weight_hint1"
        android:textColor="@color/colorMainFont"
        android:textSize="@dimen/font_m_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/padding_12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_recode_weight_hint2"
            android:textColor="@color/colorMainFont"
            android:textSize="@dimen/font_m_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:text="@string/text_recode_weight_hint3"
            android:textSize="@dimen/font_m_size"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_buy_balance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_corner_gray"
            android:gravity="center"
            android:paddingTop="@dimen/padding_12dp"
            android:paddingBottom="@dimen/padding_12dp"
            android:text="@string/text_recode_weight_buy"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_h_size"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_recode_weight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_16dp"
            android:layout_weight="1"
            android:background="@drawable/gradient_recode_weight_btn"
            android:gravity="center"
            android:paddingTop="@dimen/padding_12dp"
            android:paddingBottom="@dimen/padding_12dp"
            android:text="@string/text_recode_weight_btn"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_h_size"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>