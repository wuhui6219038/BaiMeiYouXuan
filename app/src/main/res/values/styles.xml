<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="QMUI.Compat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@android:color/darker_gray</item>
    </style>
    <!--个人中心-->
    <style name="AccountClickTextView">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/touch_bg</item>
        <item name="android:padding">@dimen/padding_16dp</item>
        <item name="android:textSize">@dimen/font_m_size</item>
        <item name="android:drawablePadding">@dimen/padding_4dp</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="UserInfo">
        <item name="android:textSize">@dimen/font_m_size</item>
        <item name="android:textColor">@android:color/black</item>


    </style>
    <!--修改个人资料-->
</resources>
